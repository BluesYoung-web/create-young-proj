{
  "formatter": {
    "ignore": [
      "src/utils/**/*.js",
      "src/utils/**/*.map",
      "src/components/ui/**/*",
      "*.d.ts",
      "index.html",
      "yarn.lock",
      "*.json",
      "README.md",
      "dist/**/*"
    ],
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": false
  }
}